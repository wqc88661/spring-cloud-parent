<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.goodsprovider.dao.CartDao">
    <insert id="insertCart" parameterType="com.itheima.Cart">
        INSERT INTO cart (goodsname, number, price, goodid, uid) VALUES (#{goodsname}, #{number}, #{price}, #{goodid}, #{uid});
    </insert>
    <update id="updateCart" parameterType="int">
        UPDATE cart SET number = number +#{number} WHERE id = #{id};
    </update>
    <select id="getAllCart" resultType="com.itheima.Cart" parameterType="java.lang.Integer">
        select * from cart where uid = #{uid};
    </select>
</mapper>