<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.userprovider.dao.UserDao">

    <insert id="register" parameterType="java.lang.String">
        INSERT INTO USER(uname,upassword,usex) VALUES
            (#{uname},#{upassword},#{usex})
    </insert>

    <select id="login" resultType="com.itheima.User" parameterType="java.lang.String">
        select * from user where uname=#{uname}
    </select>

</mapper>
